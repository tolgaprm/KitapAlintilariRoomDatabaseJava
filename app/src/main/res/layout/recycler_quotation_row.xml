<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#DD4ED4E4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="40dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/textColor"
        android:elevation="2dp"

        >

        <Button
            android:id="@+id/copyContentBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/textColor"
            app:icon="@drawable/ic_baseline_content_copy_24"
            app:iconGravity="top"
            app:iconSize="25sp" />

    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyclerViewBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Google Nasıl Yönetiliyor ? " />

            <TextView
                android:id="@+id/recyclerViewAuthorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#CB292828"
                android:textSize="20sp"
                android:textStyle="italic"
                tools:text="Eric Schmidt &amp; Jonathan Rosenberg" />
        </LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/recyclerViewQuotationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="6"
            android:textColor="@color/textColor"
            android:textAlignment="viewStart"
            android:textSize="19sp"
            tools:text="Hz. Peygamber'in (sas) bereketli hayat sayfalarında, bir kaşif gibi dolaştığımızda, o hayatın bitimsiz bir hazine olduğunu hemen fark edecek, söylenen her sözün, atılan her adımın, sessiz kalınıp onaylanan her fiilin, o dünyaya ait olan her şeyin ama her şeyin, bir şekilde bize bakan bir yönünün de olduğu itiraf edilecek, okumalarımızın şekli ve etkisi çok ama çok farklı bir şekilde değişecektir."


            />

        <TextView
            android:id="@+id/seeMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:letterSpacing=".1"
            android:text="Devamını Göster"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            android:visibility="gone"
            android:textColor="#CB292828"

            android:typeface="sans" />


        <TextView
            android:id="@+id/recyclerViewPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sayfa 100"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:textColor="#CB292828"

            />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>










